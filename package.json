{
  "name": "google-maps-mentor",
  "version": "1.0.0",
  "homepage": "https://googlementor.com",
  "scripts": {
    "dev": "next dev",
    "prebuild": "node -e \"const fs = require('fs'); const path = require('path'); const src = 'src/data'; const dest = 'public/data'; if (!fs.existsSync(dest)) fs.mkdirSync(dest, {recursive: true}); fs.readdirSync(src).filter(f => f.endsWith('.json')).forEach(f => fs.copyFileSync(path.join(src, f), path.join(dest, f)));\"",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.js && node scripts/submit-to-indexnow.js",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "build-prod": "run-s clean build",
    "clean": "rimraf .next out",
    "lint": "next lint",
    "build-types": "tsc --noEmit --pretty",
    "indexnow:generate-key": "node scripts/generate-indexnow-key.js",
    "indexnow:submit": "node scripts/submit-to-indexnow.js",
    "predeploy": "npm run clean && npm run build",
    "deploy": "gh-pages -d out",
    "preview": "serve out"
  },
  "dependencies": {
    "@babel/runtime": "^7.25.7",
    "@chakra-ui/icons": "^2.0.0",
    "@chakra-ui/react": "^2.6.0",
    "@chakra-ui/styled-system": "^2.12.0",
    "@chakra-ui/theme-tools": "^2.2.6",
    "@ducanh2912/next-pwa": "^10.2.9",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.2.0",
    "@types/react-dom": "^19.1.2",
    "framer-motion": "^10.12.16",
    "gh-pages": "^6.1.1",
    "gray-matter": "^4.0.3",
    "i18next": "^25.0.1",
    "i18next-browser-languagedetector": "^8.1.0",
    "lodash.debounce": "^4.0.8",
    "next": "^15.0.6",
    "next-mdx-remote": "^5.0.0",
    "next-sitemap": "^4.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.1.5",
    "react-icons": "^5.4.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@next/bundle-analyzer": "^15.0.6",
    "@types/lodash.debounce": "^4.0.7",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/serviceworker": "^0.0.158",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^16.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.1",
    "serve": "^14.2.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  }
}
